@model Tattoo_Shop.ViewModels.ProductListViewModel
@{
    ViewData["Title"] = "Shop Admin Page";
}
<body>
    <div class="container-xl">
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-5">
                            <h2>Product<b>Management</b></h2>
                        </div>
                        <div class="col-sm-7">
                            <a asp-action="Create" class="btn btn-secondary"><span>Add New Product</span></a>
                        </div>
                    </div>
                </div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Product</th>
                            <th>Merk</th>
                            <th>Descriptie</th>
                            <th>Prijs</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Products)
                        {
                        <tr>
                            <td>@item.Id</td>
                            <td><img src="~/img/Tattoos/@item.Foto" style="width:150px; height:auto" alt="Avatar"><p>@item.Naam</p></td>
                            <td>@item.Merk</td>
                            <td>@item.Descriptie</td>
                            <td>@item.Prijs</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><span>Edit</span></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary"><span>Delete</span></a>
                            </td>
                        </tr>
                        }
                </table>
            </div>
        </div>
    </div>
</body>

